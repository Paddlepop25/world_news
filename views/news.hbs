<h2>News Search</h2>

<form method="GET" action="/search">
  <div class="form-group">
    <input type="text" name="search-term" placeholder="enter a search term" size="50">
  </div>
  <div class="form-group">
    <div class="row">
      <div>
        <label class="form-check-label" for="country"><img src="/images/us.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="us">
      </div>
      <div>
        <label class="form-check-label" for="country"><img src="/images/uk.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="uk">
      </div>
      <div>
        <label class="form-check-label" for="country"><img src="/images/fr.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="fr">
      </div>
    {{!-- </div> --}}
    <div class="row">
      <div>
        <label class="form-check-label" for="country"><img src="/images/sg.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="sg">
      </div>
      <div>
        <label class="form-check-label" for="country"><img src="/images/jp.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="jp">
      </div>
      <div>
        <label class="form-check-label" for="country"><img src="/images/cn.png" alt=""></label>
        <input class="form-check-input" type="radio" name="country" value="cn">
      </div>
    </div>
  </div>

  <div class="form-group">
    <select class="form-control" name="category">
      <option disabled selected value>Please select one</option>
      <option value="business">business</option>
      <option value="entertainment">entertainment</option>
      <option value="general">general</option>
      <option value="health">health</option>
      <option value="science">science</option>
      <option value="sports">sports</option>
      <option value="technology">technology</option>
    </select>
  </div>

<div class="form-group">
  <button type="submit" class="btn btn-lg btn-success btn-block">Search</button>
</div>
</form>