{{#if hasContent}}
{{#each newsContent}}
<div class="news-result mt-4">
  <h4>{{this.title}}</h4>

  <div class="image">
    {{#if this.image }}
    <img src="{{this.image}}" alt="">
    {{else}}
    <img src="/images/cat.jpg" alt="">
    {{/if}}
    <br>
    <figcaption>{{this.summary}}</figcaption>
  </div>

  <div class="row more-info">
    <div class="col">
      <p>{{this.time}}</p>
    </div>
    <div class="col link">
      <a href="{{this.link}}" target="_blank">Read more...</a>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<div class="no-result">
  <h3>Your search returns no result</h3>
  <img src="/images/cat.jpg" alt="">
</div>
{{/if}}